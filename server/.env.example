# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/arogya-card

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_PATH=./uploads

# Twilio Configuration (SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@arogyacard.com

# Blockchain Configuration (Ethereum Testnet)
BLOCKCHAIN_PROVIDER_URL=https://goerli.infura.io/v3/your-infura-project-id
BLOCKCHAIN_PRIVATE_KEY=your-wallet-private-key
CONTRACT_ADDRESS=your-deployed-contract-address

# Encryption Keys
ENCRYPTION_KEY=your-32-character-encryption-key
IV_KEY=your-16-character-iv-key

# Biometric API Configuration
FACE_API_KEY=your-face-recognition-api-key
BIOMETRIC_THRESHOLD=0.7

# Admin Configuration
ADMIN_EMAIL=admin@arogyacard.com
ADMIN_PASSWORD=admin123456

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-key