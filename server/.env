# Development Environment Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/arogya_card

# JWT Secret (development only - use a secure key in production)
JWT_SECRET=dev_jwt_secret_key_for_arogya_card_system_2024
JWT_EXPIRE=24h

# Encryption (development only)
ENCRYPTION_KEY=dev_32_char_encryption_key_123456

# Twilio (SMS) - Add your credentials
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Email Configuration - Add your credentials
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Blockchain (optional for development)
BLOCKCHAIN_NETWORK_URL=https://goerli.infura.io/v3/your_infura_project_id
PRIVATE_KEY=your_ethereum_private_key
CONTRACT_ADDRESS=your_deployed_contract_address

# File Upload
MAX_FILE_SIZE=50mb
UPLOAD_PATH=./uploads/

# Security
SESSION_SECRET=dev_session_secret_key
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Emergency Access
EMERGENCY_ACCESS_TIMEOUT=300000
MAX_EMERGENCY_ATTEMPTS=3